<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/open_sdk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="open sdk" />

        <TextView
            android:id="@+id/open_multiple_sdk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="open multiple sdk" />

        <TextView
            android:id="@+id/open_random_oaid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="open random oaid" />

        <TextView
            android:id="@+id/open_content_sdk_lite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="open content sdk lite" />

    </LinearLayout>

    <com.maishuo.haohai.widgets.FloatingView
        android:id="@+id/floatingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

    </com.maishuo.haohai.widgets.FloatingView>

    <com.maishuo.haohai.widgets.AutoScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="143dp"/>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#E85653"
        android:gravity="center"
        android:text="拖动到此处删除"
        android:textColor="#fff"
        android:visibility="gone" />
</RelativeLayout>
